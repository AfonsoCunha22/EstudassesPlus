<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPlan">
    <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationZ="90dp"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/goBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_back" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="163dp"
                        android:src="@drawable/ic_book" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="@string/new_plan"
        android:textSize="35sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/title"
        android:layout_marginBottom="8dp"
        android:background="#666868"
        app:layout_constraintBottom_toTopOf="@+id/durationPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:labelFor="@+id/durationPicker"
        android:text="@string/duration"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/durationPicker"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <NumberPicker
        android:id="@+id/durationPicker"
        android:layout_width="60dp"
        android:layout_height="148dp"
        android:layout_below="@id/line"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/colorSpinner"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:labelFor="@+id/colorSpinner"
        android:text="@string/color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationLabel" />

    <TextView
        android:id="@+id/subjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:labelFor="@+id/subjectSpinner"
        android:text="@string/subject"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/colorSpinner"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_below="@+id/durationPicker"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="60dp"
        android:layout_toEndOf="@+id/colorLabel"
        android:dropDownWidth="200dp"
        app:layout_constraintBottom_toTopOf="@+id/subjectSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/colorLabel" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/subjectSpinner"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_below="@+id/colorSpinner"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="80dp"
        android:layout_toEndOf="@+id/colorLabel"
        android:dropDownWidth="200dp"
        app:layout_constraintBottom_toTopOf="@+id/editDescription"
        app:layout_constraintStart_toEndOf="@+id/subjectLabel" />

    <Button
        android:id="@+id/addSubjectBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descriptionLabel"
        android:layout_below="@+id/colorSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="72dp"
        android:layout_toEndOf="@+id/subjectSpinner"
        android:background="@drawable/ic_add_circle"
        app:layout_constraintBottom_toTopOf="@+id/editDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/subjectSpinner" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subjectLabel"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:labelFor="@+id/editDescription"
        android:text="@string/description"

        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/editDescription"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="298dp"
        android:layout_height="100dp"
        android:layout_below="@+id/descriptionLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="start|bottom"
        android:hint="@string/description_hint"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/addPlanBtn"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addPlanBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#1F517C"
        android:text="@string/add_plan"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>



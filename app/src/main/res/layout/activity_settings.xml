<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/openMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/avatar_default" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="233dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/userImage"
            android:text="TestUser"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="185dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAccount"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:drawableStart="@drawable/ic_set_key"
                    android:text="Account" />

                <Button
                    android:id="@+id/btnNotification"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/btnAccount"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_set_bell"
                    android:text="Notifications" />

                <Button
                    android:id="@+id/btnSensors"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/btnNotification"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_set_sensors"
                    android:text="Sensors" />

                <Button
                    android:id="@+id/btnLanguage"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/btnSensors"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_set_language"
                    android:text="Language" />

                <Button
                    android:id="@+id/btnHelp"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/btnLanguage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_set_help"
                    android:text="Help" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:id="@+id/nav_menu"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sessionsMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="266dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/sessions" />

            <Button
                android:id="@+id/studyMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="344dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/study" />

            <Button
                android:id="@+id/settingsMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="424dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/settings" />

            <TextView
                android:id="@+id/usernameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="198dp"
                android:text="TextView"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="86dp"
                android:layout_marginTop="591dp"
                android:text="@string/logout"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/icoMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="191dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/icon" />

            <ImageView
                android:id="@+id/avatarMenu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="56dp"
                app:srcCompat="@drawable/avatar_default" />
        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    tools:context=".PlanFragment"
    android:background="@drawable/plan_fragment_background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/sessionDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sessionLocation"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="40dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_session_time" />

    <TextView
        android:id="@+id/sessionLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="152dp"
        android:layout_toEndOf="@+id/subjectName"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_map" />

    <TextView
        android:id="@+id/sessionUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/subjectName"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="43dp"
        android:layout_toStartOf="@+id/sessionDateTime"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_sessions" />

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="35dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_subject_session" />

    <Button
        android:id="@+id/expandSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="265dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="51dp"
        android:text="@string/expand" />


</RelativeLayout>
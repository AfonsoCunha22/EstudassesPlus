<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".PlanFragment"
    android:background="@drawable/plan_fragment_background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/sessionDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/sessionLocation"
        android:layout_alignParentStart="true"

        android:layout_marginStart="43dp"
        android:layout_marginTop="6dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_session_time" />

    <TextView
        android:id="@+id/sessionLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/sessionUser"
        android:layout_alignParentStart="true"

        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_map" />

    <TextView
        android:id="@+id/sessionUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/subjectName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_sessions" />

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="14dp"
        android:text="@string/subject"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_subject_session" />

    <Button
        android:id="@+id/expandSessionButton"
        android:layout_width="145dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="232dp"
        android:layout_marginEnd="14dp"
        android:text="@string/expand"
        android:layout_centerVertical="true"/>


</RelativeLayout>
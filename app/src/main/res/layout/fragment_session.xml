<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    tools:context=".PlanFragment"
    android:background="@drawable/plan_fragment_background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        android:text="@string/subject"
        android:textSize="30sp"
        app:drawableStartCompat="@drawable/ic_subject_plan" />

    <TextView
        android:id="@+id/planTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectName"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:text="@string/subject"
        android:textSize="30sp"
        app:drawableStartCompat="@drawable/ic_plan_time" />


</RelativeLayout>
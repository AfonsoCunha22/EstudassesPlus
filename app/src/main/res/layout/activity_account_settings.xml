<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountSettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/openMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_set_key" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/userImageContainer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/avatar_default" />

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="60dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_toEndOf="@id/userImageContainer"
            app:srcCompat="@drawable/ic_acc_set_image" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="235dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:labelFor="@id/nameField"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/nameLabel"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/phoneLabel"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:labelFor="@id/phoneField"
                    android:layout_below="@id/nameField"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:text="Phone"/>

                <EditText
                    android:id="@+id/phoneField"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:layout_below="@id/phoneLabel"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/passLabel"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:labelFor="@id/passField"
                    android:layout_below="@id/phoneField"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:text="Password" />

                <EditText
                    android:id="@+id/passField"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/passLabel"
                    android:inputType="textPassword"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:labelFor="@id/emailLabel"
                    android:layout_below="@id/passField"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:text="E-Mail" />

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/emailLabel"
                    android:inputType="textEmailAddress"
                    android:text="user@email.com"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/emailField"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Apply"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:id="@+id/nav_menu"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sessionsMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="266dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/sessions" />

            <Button
                android:id="@+id/studyMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="344dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/study" />

            <Button
                android:id="@+id/settingsMenu"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="424dp"
                android:layout_marginEnd="0dp"
                android:alpha="0.25"
                android:text="@string/settings" />

            <TextView
                android:id="@+id/usernameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="198dp"
                android:text="TextView"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="86dp"
                android:layout_marginTop="591dp"
                android:text="@string/logout"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/icoMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="191dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/icon" />

            <ImageView
                android:id="@+id/avatarMenu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="56dp"
                app:srcCompat="@drawable/avatar_default" />
        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
